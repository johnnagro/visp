#!/usr/bin/env ruby
# encoding: utf-8

require 'awesome_print'

require 'dotenv'
require 'httpkit'
require 'visp/cjdns'

Dotenv.load

cjdns = VISP::Cjdns.new(address: ENV['CJDNS_ADDRESS'],
                        port: ENV['CJDNS_PORT'],
                        password: ENV['CJDNS_PASSWORD'])

HTTPkit.start do
  Signal.trap(:SIGINT) { HTTPkit.stop }

  case ARGV[0]
  when 'tunnel' then
    require 'visp/tunnel'
    tunnel = VISP::Tunnel.new(cjdns, network: '172.23.23.0/24', forward: 'eth0')
    tunnel.run
    HTTPkit.stop
  when 'leases' then
    require 'visp/leases'
    address = ENV['ADDRESS'] || '127.0.0.1'
    port = ENV['PORT'] || 3000
    leases = VISP::Leases.new(cjdns, address: address, port: port,
                                     journal: File.new('./leases.json', 'a+'))
    leases.replay_journal
    EM.add_periodic_timer(5) { leases.maintain_leases }
    leases.run
  when 'client' then
    require 'visp/client'
    client = VISP::Client.new(cjdns, peers: ENV['CLIENT_PEERS'].split(','),
                                     original_gateway: '192.168.4.1',
                                     dir: File.expand_path('../..', __FILE__))
    EM.add_periodic_timer(5) { client.maintain_tunnels }
    client.run
  when 'sudo' then
    path = File.expand_path('../visp-ip', __FILE__)
    puts ENV['USER'] + " ALL=(ALL) NOPASSWD:" + path
    HTTPkit.stop
  else
    puts 'Usage: visp tunnel|leases|client|sudo'
    HTTPkit.stop
  end
end
